<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="addTask"
            type="com.example.mvvmpattern.model.TaskAdd" />
    </data>
    <RelativeLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mvvmpattern.MainActivity"
        android:paddingTop="@dimen/rl_padding"
        android:paddingBottom="@dimen/rl_padding"
        android:paddingRight="@dimen/rl_padding"
        android:paddingLeft="@dimen/rl_padding">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:id="@+id/recycler_view"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button"
            android:text="@{addTask.input}"
            android:hint="@string/new_task_str"
            android:inputType="text"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:padding="10dp"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:layout_alignEnd="@+id/recycler_view"
            android:layout_alignParentBottom="true"
            android:text="@string/add_str"/>
    </RelativeLayout>
</layout>